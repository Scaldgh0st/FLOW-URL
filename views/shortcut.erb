<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Shortcut</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


    <link rel="stylesheet" type="text/css" href="css/main.css">

  </head>
  <body>
    <div class="container">
      <!-- Scales outside dimensions of the graphic to fit within the container -->
      <svg class="urlframe frame-outer" width="100%" height="100%">
        <polygon points="0,298 1110,298 1110,387 0,477" style="fill:black" />
      </svg>

      <h1 class="pt-5" id="center-head">Shortcut!</h1>

      <form method="post">
        <div class="form-row">
          <div class="col-3">

          </div>
          <div class="form-group col-6">
            <input type="text" name="url" class="form-control" id="longInputURL" aria-describedby="shortcutHelp" placeholder="Where do you want to go?">
            <small id="shortcutHelp" class="form-text text-muted">The World is a big place, and it's easy to get lost. Tell us where you've been, and we'll help you find your way back.</small>
          </div>
          <div class="col-3">
            <button type="submit" class="btn btm-primary">Shortcut!</button>
          </div>
        </div>
      </form>
      <!--
        <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
          <div class="row">
            <button id="hgetd" class="btn btn-warning">Get Document Height</button>
            <button id="wgetd" class="btn btn-danger">Get Document Width</button>
          </div>
          <div class="row">
            <button id="hgetw" class="btn btn-warning">Get Window Height</button>
            <button id="wgetw" class="btn btn-danger">Get Window Width</button>
            <button id="columngetw" class="btn btn-default">Get Column Width</button>
            <button id="containergetw" class="btn btn-primary">Get Container Width</button
          </div>
        </div>
        <div class="col-3">
          <p id="infobox">&nbsp;</p>
        </div>
      </div>
      -->
    </div>


    <!-- Optional Javascript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <!-- jQuery script for finding Height of Document and Window -->
    <script>
      function showHeight(element, height) {
        $("#infobox").text("The height for the " + element + " is " + height + "px." );
      }
      $("#hgetd").click(function() {
        showHeight("document", $(document).height() );
      });
      $("#hgetw").click(function() {
        showHeight("window", $(window).height() );
      });
    </script>

    <script>
      function showWidth(element, width) {
        $("#infobox").text("The width for the " + element + " is " + width +"px." );
      }
      $("#wgetd").click(function() {
        showWidth("document", $(document).width() );
      });
      $("#wgetw").click(function() {
        showWidth("window", $(window).width() );
      });
      $("#columngetw").click(function() {
        showWidth("column", $(".col-6").width() );
      });
      $("#containergetw").click(function() {
        showWidth("container", $(".container").width() );
      });
    </script>
  </body>
</html>
